        <Label x:Name="lblGameCost" FontSize="10px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,58,0,0" Width="207" Height="23" />
        <TextBox x:Name="txtNumberOfWeeks" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="227,36,0,0" Width="50" Height="19" />
        <Button x:Name="btnValider" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="btnValider_Click" />
    </Grid>
</Window>

