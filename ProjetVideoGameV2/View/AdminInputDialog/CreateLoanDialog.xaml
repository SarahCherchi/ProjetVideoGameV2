<Window x:Class="ProjetVideoGameV2.View.AdminInputDialog.CreateLoanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number of weeks" Height="150" Width="250">

    <Grid>
        <Label x:Name="lblGameName" FontSize="10.5px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,36,0,0" Width="145" Height="31" />
        <TextBox x:Name="txtNumberOfWeeks" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="165,36,0,0" Width="50" />
        <Button x:Name="btnValider" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="btnValider_Click" />
    </Grid>
</Window>
