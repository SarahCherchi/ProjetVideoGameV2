<UserControl x:Class="ProjectVideoGameV2.View.Home_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectVideoGameV2.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Label Content="Home" Foreground="Black" HorizontalAlignment="Center" Margin="0,52,0,0" VerticalAlignment="Top" FontSize="30" Width="92" Background="{x:Null}"/>
        <Button Content="Search" Foreground="White" HorizontalAlignment="Left" Margin="721,16,0,0" VerticalAlignment="Top" Background="#FFFF0020" Click="Button_Search"/>
        <DataGrid Name="dgVideoGames" AutoGenerateColumns="False" Margin="32,112,229,112" SelectionChanged="dgVideoGames_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding IdVideoGames}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                <DataGridTextColumn Header="Credit cost" Binding="{Binding CreditCost}" />
                <DataGridTextColumn Header="Console" Binding="{Binding Console}" />
                <DataGridTextColumn Header="Available" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Renting" Foreground="White" Background="#FF2E65CF" HorizontalAlignment="Left" Margin="32,366,0,0" VerticalAlignment="Top" Height="41" Width="284" Click="Button_Renting"/>
        <Image HorizontalAlignment="Left" Height="17" Margin="651,17,0,0" VerticalAlignment="Top" Width="30" Source="/WPF/coin.png" RenderTransformOrigin="1.783,0.552"/>
        <Label x:Name="lb_pseudo" HorizontalAlignment="Left" Margin="32,17,0,0" VerticalAlignment="Top" Width="156" Height="27"/>
        <Label x:Name="lb_credit" HorizontalAlignment="Left" Margin="681,12,0,0" VerticalAlignment="Top" Width="27" Height="24"/>
    </Grid>
</UserControl>
