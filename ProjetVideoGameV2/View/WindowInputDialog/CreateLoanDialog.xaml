<Window x:Class="ProjetVideoGameV2.View.AdminInputDialog.CreateLoanDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Number of weeks" Height="150" Width="300">

    <Grid>
        <Label x:Name="lbNameVideoGame" HorizontalAlignment="Center" VerticalAlignment="Top" HorizontalContentAlignment="Center" Margin="0,5,0,0" Width="280" Height="27" />
        <Label x:Name="lblGameName" FontSize="12px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,36,0,0" Width="103" Height="26" />
        <Label x:Name="lblGameCost" FontSize="10px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15,67,0,0" Width="207" Height="23" />
        <TextBox x:Name="txtNumberOfWeeks" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" Width="50" Height="18" />
        <Button x:Name="btnValider" Content="OK" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Width="75" Click="btnValider_Click" />
    </Grid>
</Window>

